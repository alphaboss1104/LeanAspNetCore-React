<!-- Nested layout -->
@inject LeanAspNetCore.TagHelpers.ManifestReader ManifestReader
@{
    Layout = "_Layout";
}

@RenderBody()

@section scripts
{
    <environment names="Development">
        <script type="module" src="~/js/classic-jquery.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="module" src="~/dist/@(ManifestReader.ResolveHashedPath("classic-jquery.js"))"></script>
    </environment>

    @RenderSection("scripts", required: false)
}